#posts
  - @posts.reverse.each do |post|
    .post
      = image_tag post.image_url
      %br
      = post.description
      - @recipe = post.recipe
      %div.recipe_name
        = @recipe.name
      %ol
        - @recipe.recipe_steps.each do |step|
          %li
            = step.description
            - @step_ingredients = step.step_ingredients
            - if @step_ingredients.length > 0
              %span.ingredients
                - @step_ingredients.each do |step_ingredient|
                  = "#{step_ingredient.amount}"
                  = link_to step_ingredient.ingredients.first.name, step_ingredient.ingredients.first