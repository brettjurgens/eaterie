= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .row
    .field
      = f.text_field :image_url, :placeholder => 'Image URL'
  .row
    .field
      = f.text_area :description, :placeholder => 'Write your post'
  .row
    %h2
      New Recipe:
  - @recipe = Recipe.new
  = render :partial => 'recipes/form', :object => @recipe
