<!DOCTYPE html>
<html>
<head>
  <title>Eaterie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%- if user_signed_in? %>
    <p>You're logged in as <%== link_to current_user.name, current_user %> &nbsp; <%== link_to 'logout', logout_path %></p>
<%- end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
