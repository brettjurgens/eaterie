<!DOCTYPE html>
<html>
<head>
  <title>Eaterie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <header>
    <%- if user_signed_in? %>
        <%== link_to "Home", posts_url %> &nbsp;
        You're logged in as <%== link_to current_user.name, current_user %> &nbsp; <%== link_to 'logout', logout_path %>
    <%- end %>
  </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

</div>
</body>
</html>
